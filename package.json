{
  "name": "videre-bot",
  "description": "Project Videre Discord Bot",
  "private": true,
  "scripts": {
    "start": "ts-node-dev src",
    "build": "tsc",
    "serve": "yarn build && node build",
    "test": "jest --watchAll --verbose --testTimeout=10000",
    "test:ci": "jest .",
    "format": "prettier src --write"
  },
  "dependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/node-fetch": "^2.5.7",
    "@types/puppeteer": "^3.0.2",
    "discord.js": "^12.3.1",
    "dotenv": "^8.2.0",
    "jest": "^26.4.2",
    "node-fetch": "^2.6.1",
    "puppeteer": "^5.3.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "prettier": "^2.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "build"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
